{
    "MODULES" : {
	"service.jobs.Jobs" : "config/jobs.json",
	"service.jobs.Admin" : "config/jobs_admin.json"
    },

    "HANDLERS" : {
	    "POST" : {
	    "/jobs/admin/login" : { "method" : "service.jobs.Admin.login",
					"parameters" : ["username", "password"] },
	    "/jobs/admin/logout" : { "method" : "service.jobs.Admin.logout",
					 "parameters" : ["token"] },
	    "/jobs/admin/adduser" : { "method" : "service.jobs.Admin.add_user",
					  "parameters" : ["token", "username", "password", "name", "surname", "email"] },
	    "/jobs/admin/deluser" : { "method" : "service.jobs.Admin.del_user",
					  "parameters" : ["token", "username"] },
	    "/jobs/admin/userinfo" : { "method" : "service.jobs.Admin.get_uinfo",
					   "parameters" : ["username", "token"] },
	    "/jobs/admin/updateuser" : { "method" : "service.jobs.Admin.update_user",
					   "parameters" : ["username", "token"] },
	    "/jobs/admin/loadusers" : { "method" : "service.jobs.Admin.get_users",
					    "parameters" : ["token"] },

	    "/jobs/login" : { "method" : "service.jobs.Jobs.login",
				  "parameters" : ["username", "password"] },
	    "/jobs/logout" : { "method" : "service.jobs.Jobs.logout",
				   "parameters" : ["token"] },
	    "/jobs/addjob" : { "method" : "service.jobs.Jobs.add_job",
				   "parameters" : ["token", "service", "subsystem", "getaudio", "postresult"] },
	    "/jobs/deletejob" : { "method" : "service.jobs.Jobs.delete_job",
				   "parameters" : ["token", "jobid"] }
    	},

    	"GET" : {
	    "/jobs/queryjob" : { "method" : "service.jobs.Jobs.query_job",
				   "parameters" : ["token", "jobid"] },
	    "/jobs/userjobs" : { "method" : "service.jobs.Jobs.user_jobs",
				   "parameters" : ["token"] }
	    }
    },

    "logging" : {
	"dir" : "/mnt/stp/",
	"format" : "%(asctime)s :: %(name)s :: %(levelname)s :: %(message)s"
    }

}
